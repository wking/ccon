{
	"mounts": {
		"root": {
			"type": "bind",
			"source": "/tmp",
			"options": ["rbind", "rw"]
		}
	},
	"hooks": {
		"prestart": [
			{
				"path": "/bin/sh",
				"args": ["/bin/sh", "-c", "echo 'pre-start'; env; cat"],
				"env": [
					"PATH=/bin",
					"PAGER=less"
				]
			}
		],
		"poststop": [
			{
				"path": "/bin/sh",
				"args": ["sh", "-c", "echo 'post-stop'; env;"],
				"env": [
					"PATH=/bin",
					"PAGER=less"
				]
			}
		]
	},
	"linux": {
		"namespaces": [
			{
				"type": "pid"
			},
			{
				"type": "network"
			},
			{
				"type": "mount"
			},
			{
				"type": "ipc"
			},
			{
				"type": "uts"
			},
			{
				"type": "user"
			},
			{
				"type": "mount"
			}
		]
	}
}
