{
	"ociVersion": "0.5.0",
	"platform": {
		"os": "linux",
		"arch": "amd64"
	},
	"hostname": "mrsdalloway",
	"root": {
		"path": "rootfs",
		"readonly": true
	},
	"process": {
		"terminal": true,
		"user": {
			"uid": 0,
			"gid": 0
		},
		"capabilities": [
			"CAP_AUDIT_WRITE",
			"CAP_KILL",
			"CAP_NET_BIND_SERVICE"
		],
		"env": [
			"PATH=/bin",
			"TERM=xterm"
		],
		"cwd": "/root",
		"args": ["busybox", "sh"]
	},
	"mounts": [
		{
			"source": "/tmp",
			"destination": "/root",
			"type": "bind",
			"options": ["rbind", "rw"]
		}
	],
	"hooks": {
		"prestart": [
			{
				"timeout": 3,
				"path": "/bin/sh",
				"args": ["/bin/sh", "-c", "echo 'pre-start'; env; cat"],
				"env": [
					"PATH=/bin",
					"PAGER=less"
				]
			}
		],
		"poststop": [
			{
				"path": "/bin/sh",
				"args": ["sh", "-c", "echo 'post-stop'; env; cat"],
				"env": [
					"PATH=/bin",
					"PAGER=less"
				]
			}
		]
	},
	"linux": {
		"namespaces": [
			{
				"type": "pid"
			},
			{
				"type": "network"
			},
			{
				"type": "mount"
			},
			{
				"type": "ipc"
			},
			{
				"type": "uts"
			},
			{
				"type": "user"
			},
			{
				"type": "mount"
			}
		],
		"uidMappings": [
			{
				"hostID": 1000,
				"containerID": 0,
				"size": 1
			}
		],
		"gidMappings": [
			{
				"hostID": 1000,
				"containerID": 0,
				"size": 1
			}
		]
	}
}
